#!/usr/bin/with-contenv bash


apk upgrade --update && apk add \
  coreutils \
  libmcrypt-dev \
  php5-mcrypt \
  php5-sockets \
  php-sockets \
  php7-curl \
  php5-curl \
  curl \
  curl-dev \
  && docker-php-ext-configure mcrypt \
  --with-mcrypt \
  && docker-php-ext-install  mcrypt \
  && apk del \
  libmcrypt-dev \

# fetch site
[[ ! -d /config/www/Phlex/.git ]] && \
	git clone https://github.com/d8ahazard/Phlex /config/www/Phlex

cd /config/www/Phles
git pull

# permissions
chown -R abc:abc \
	/config/www
