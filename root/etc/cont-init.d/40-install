#!/usr/bin/with-contenv bash


apk upgrade --update && apk add \
  coreutils \
  libmcrypt-dev \
  php5-mcrypt \
  && docker-php-ext-configure mcrypt \
  --with-mcrypt \
  && docker-php-ext-install  mcrypt \
  && apk del \
  libmcrypt-dev \
	
# fetch site
[[ ! -d /config/www/phlex/.git ]] && \
	git clone https://github.com/d8ahazard/Phlex /config/www/Phlex

# permissions
chown -R abc:abc \
	/config/www
