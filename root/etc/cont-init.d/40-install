#!/usr/bin/with-contenv bash

apk upgrade --update
apk add iptables

# check/set multicast
[[ ! -e /config/updated ]] && \
	ip link set eth0 multicast on
	sysctl -w net.ipv4.conf.all.mc_forwarding=1
	sysctl -w net.ipv4.conf.eth0.rp_filter=0
	sysctl -p
	iptables -I INPUT -d 224.0.0.0/4 -j ACCEPT
	iptables -I FORWARD -d 224.0.0.0/4 -j ACCEPT
	iptables -I INPUT -d 224.0.0.251/4 -j ACCEPT
	iptables -I FORWARD -d 224.0.0.251/4 -j ACCEPT
	ip route add -net 224.0.0.0 netmask 240.0.0.0 dev eth0 
	touch /config/updated

# fetch site
[[ ! -d /config/www/Phlex/.git ]] && \
	git clone https://github.com/d8ahazard/Phlex /config/www/Phlex

cd /config/www/Phlex
git pull

# permissions
chown -R abc:abc \
	/config/www

# logs
[[ ! -d /config/www/Phlex/logs/ ]] && \
    mkdir /config/www/Phlex/logs/
    touch /config/www/Phlex/logs/Phlex.log
    touch /config/www/Phlex/logs/Phlex_error.log
    chmod 777 /config/www/Phlex/logs/Phlex.log
    chmod 777 /config/www/Phlex/logs/Phlex_error.log
    ln -sf /dev/stdout /config/www/Phlex/logs/Phlex.log
    ln -sf /dev/stderr /config/www/Phlex/logs/Phlex_error.log
	
envsubst < /template/default > /defaults/default
